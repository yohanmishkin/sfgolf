<h2>Leaderboard</h2>

<div class="col-md-12 col-xs-12">
	<div class="list-group">
		<ol>{{#each sortedTeams as |team|}}
			{{#link-to 'teams.team' team tagName='li' class="list-group-item row-fluid clearfix"}}
				<div class="col-md-1 col-xs-1">
					<strong>{{team.totalScore}}</strong>
				</div>
				<div class="col-md-11 col-xs-11">
					{{team.user.name}}
				</div>
			{{/link-to}}
		{{/each}}</ol>
	</div>
</div>

<div class="col-md-12 col-xs-12">
	{{outlet}}
</div>