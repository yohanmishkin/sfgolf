
<div class="container-fluid">
	<div class="page-header">
		<h2 id="title" class="text-center">The Masters</h2>
		<ul class="nav nav-pills">			
			{{#if session.isAuthenticated}}
				<li>{{link-to 'Leaderboard' 'teams'}}</li>
				<li>{{link-to 'Golfers' 'golfers'}}</li>
				<li><a href="http://www.masters.com/en_US/index.html" target="_blank">Masters.com</a></li>
				<li class="pull-right"><a {{action 'logout'}}>{{session.currentUser.name}} | Log out</a></li>
			{{else}}
				<li class="pull-right">{{link-to 'Log in' 'login'}}</li>
				<li class="pull-right">{{link-to 'Sign up' 'signup'}}</li>
			{{/if}}
		</ul>
	</div>

	<div class="row-fluid">
		{{outlet}}
		<div class="flash-messages">
		{{#each flashMessages.queue as |flash|}}
			{{flash-message flash=flash}}
		{{/each}}
		</div>
	</div>
</div>